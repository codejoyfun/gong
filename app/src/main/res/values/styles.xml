<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.




    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.


        -->
    </style>

    <style name="RatingBarStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/dealer_ratingbar</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:maxHeight">14dp</item>
    </style>
    <style name="RatingBarStyle2" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/evaluate_rate_bar</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>

    <style name="RatingBarBigStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/dealer_big_ratingbar</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:maxHeight">44dp</item>
    </style>

    <style name="Theme.Welcome" parent="@style/Theme.AnimStyle">
        <item name="android:windowBackground">@drawable/splash_layers</item>
    </style>
    <style name="ImageTranslucentTheme" parent="android:Theme.Light">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
    </style>
    <style name="ButtonStyle" >
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="MyCustomTabLayout">
        <!-- 改变指示器下标的颜色-->
        <item name="tabIndicatorColor">@color/tab_text_on_color</item>
        <!-- 改变选中字体的颜色-->
        <item name="tabSelectedTextColor">@color/tab_text_on_color</item>
        <!-- 改变未选中字体的颜色-->
        <item name="tabTextColor">@color/black</item>
    </style>

    <style name="divider_horizontal">
        <!-- -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/windowBackground</item>
    </style>
    <style name="space_horizontal">
        <!-- -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/windowBackground</item>
    </style>

    <style name="LoginActivityAnimTheme" parent="Theme.AnimStyle">
        <item name="android:windowAnimationStyle">@style/LoginActivityAnimStyle</item>
    </style>
    <style name="LoginActivityAnimStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="myTransparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="badge_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:minWidth">14dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:visibility">invisible</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/badge_bg</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="sub_badge_style" parent="badge_style">
        <item name="android:background">@drawable/sub_badge_bg</item>
        <item name="android:textColor">@color/sub_badge_text</item>
    </style>

</resources>