<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="66dp">
        <LinearLayout android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:gravity="center|bottom"
                android:textColor="#6BB400"
                android:paddingBottom="5dp"
                android:text="智能下单"/>
            <View android:layout_height="5dp"
                android:layout_width="66dp"
                android:background="#4BB400"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:paddingBottom="10dp"
            android:textColor="#666666"
            android:text="自助下单"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="center"
        android:src="@drawable/default_ico_nonepayorder"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/call_phone_circle">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="上次采购额"
            android:paddingLeft="15dp"
            android:gravity="center"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="42.12  ¥"
            android:paddingRight="10dp"
            android:gravity="center"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/ygTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="预估营业额"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/dayWeekTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/dd_down"
                android:layout_alignParentRight="true"
                android:drawablePadding="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="天"/>
            <TextView
                android:id="@+id/lineTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="|"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textColor="#f2f2f2"
                android:layout_toLeftOf="@+id/dayWeekTv"/>
            <TextView
                android:id="@+id/mTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="¥"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_toLeftOf="@+id/lineTv"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/mTv"
                android:layout_marginLeft="10dp"
                android:maxLength="7"
                android:background="@null"
                android:inputType="numberDecimal"
                android:textColorHint="#2E2E2E"
                android:hint="请输入金额"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:text="确认"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:background="@drawable/sure_circle"
        android:textColor="#ffffff"/>
</LinearLayout>