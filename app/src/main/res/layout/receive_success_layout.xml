<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">
    <include layout="@layout/common_title_bar" android:id="@+id/title_bar"
        />
    <ImageView
        android:id="@+id/icon"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/default_receivedsuccess"
        android:scaleType="centerCrop"
        android:layout_below="@id/title_bar"
        android:layout_marginTop="71dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/receiveTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="#2E2E2E"
        android:layout_below="@id/icon"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="收货成功"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receiveTv"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/orderBtn"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:text="评价订单"
            android:gravity="center"
            android:textColor="#333333"
            android:background="@drawable/upload_btn_circle"
            />
        <TextView
            android:id="@+id/uploadBtn"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:text="上传支付凭证"
            android:layout_marginLeft="15dp"
            android:textColor="#333333"
            android:gravity="center"
            android:background="@drawable/upload_btn_circle"
            />
    </LinearLayout>

</RelativeLayout>