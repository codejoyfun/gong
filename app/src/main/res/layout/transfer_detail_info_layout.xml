                android:textColor="#2E2E2E"
                />
            <TextView
                android:id="@+id/tv_transfer_detail_time"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:text="创建时间："
                android:gravity="center_vertical"
                android:layout_below="@id/tv_transfer_detail_locations_value"
                android:textSize="14sp"
                android:textColor="#999999"
                />
            <TextView
                android:id="@+id/tv_transfer_detail_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-04-12"
                android:gravity="center_vertical"
                android:layout_alignBaseline="@id/tv_transfer_detail_time"
                android:layout_toRightOf="@id/tv_transfer_detail_time"
                android:textSize="14sp"
                android:textColor="#2E2E2E"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:background="#F0F0F0"/>
    </LinearLayout>
</merge>