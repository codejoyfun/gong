                   <!--android:layout_marginLeft="5dp"-->
                   <!--android:textSize="9sp"-->
                   <!--android:textColor="#FA5900"-->
                   <!--android:gravity="center"-->
                   <!--android:background="@drawable/receive_circle"/>-->
               <!--<TextView-->
                   <!--android:id="@+id/returnTv"-->
                   <!--android:layout_width="18dp"-->
                   <!--android:layout_height="14dp"-->
                   <!--android:text="退"-->
                   <!--android:layout_marginLeft="5dp"-->
                   <!--android:textSize="9sp"-->
                   <!--android:textColor="#FA5900"-->
                   <!--android:gravity="center"-->
                   <!--android:background="@drawable/receive_circle"/>-->
           </LinearLayout>
            <TextView
                android:id="@+id/tv_transfer_detail_locations"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:text="调拨路径："
                android:gravity="center_vertical"
                android:layout_below="@id/orderLL"
                android:textSize="14sp"
                android:textColor="#999999"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/tv_transfer_detail_locations_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发出门店\u2192到达门店"
                android:gravity="center_vertical"
                android:layout_alignBaseline="@id/tv_transfer_detail_locations"
                android:layout_toRightOf="@id/tv_transfer_detail_locations"
