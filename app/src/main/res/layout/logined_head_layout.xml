<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.bigkoo.convenientbanner.ConvenientBanner
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ConvenientBanner"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#ffff"
        app:canLoop="true"
        />
    <LinearLayout
        android:id="@+id/numsLL"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_below="@id/ConvenientBanner"
        android:background="#FFFFFF"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_procurement"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/lastWeekKey"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#999999"
                android:text="上周采购额(万元)"/>
            <TextView
                android:id="@+id/lastWeekBuy"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#6BB400"
                android:text="3.8"/>
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#E3E3E3"
            />
        <LinearLayout
            android:id="@+id/lqLL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/lqCountTv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#999999"
                android:text="临期食材(元)"/>
            <TextView
                android:id="@+id/lastMonthBuy"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#FF9B00"
                android:text="¥2.45"/>
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#E3E3E3"
            />
        <LinearLayout
            android:id="@+id/dqLL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/dqCountTv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#999999"
                android:text="到期食材(元)"/>
            <TextView
                android:id="@+id/unPayAccount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#FF3B30"
                android:text="¥1.53"/>

        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/v_space"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F5F5F5"
        android:layout_below="@id/numsLL"
        />
    <com.kids.commonframe.base.view.LoadingLayout
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_space"
        />
</RelativeLayout>