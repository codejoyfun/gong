<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color"
    android:paddingTop="@dimen/status_bar_padding_top"
    >
    <include layout="@layout/common_title_bar"></include>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.ogaclejapan.smarttablayout.SmartTabLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="#f5f5f5"
                app:stl_customTabTextLayoutId="@layout/custom_tab"
                app:stl_defaultTabTextColor="@color/base_color"
                app:stl_defaultTabTextSize="14dp"
                app:stl_distributeEvenly="true"
                app:stl_dividerColor="@color/transparent"
                app:stl_indicatorColor="@color/base_color"
                app:stl_indicatorCornerRadius="2dp"
                app:stl_indicatorInterpolation="smart"
                app:stl_indicatorThickness="4dp"
                app:stl_overlineColor="@color/transparent"
                app:stl_underlineThickness="0dp" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titleLayout"
                    >
                    <TextView
                        android:id="@+id/rl_newcomment"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:background="#90000000"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="点击查看"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:visibility="gone" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        <com.kids.commonframe.base.view.LoadingLayout
            android:id="@+id/loadingLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</LinearLayout>