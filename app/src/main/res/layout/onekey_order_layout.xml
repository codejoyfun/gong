<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/common_title_bar"
        android:id="@+id/title_bar"></include>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pullListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="#0000"
        ptr:ptrAnimationStyle="flip"
        android:background="#f5f5f5"
        android:divider="@null"
        android:layout_below="@id/title_bar"
        />
    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/loadingImg"
        android:scaleType="fitXY"
        android:layout_width="64dp"
        android:layout_height="170dp" />
    <TextView
        android:id="@+id/loadingTv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="正在计算..."
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_marginTop="15dp"
        android:layout_below="@id/loadingImg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@drawable/onekey_circle"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="10dp"
            >
            <TextView
                android:id="@+id/dateTv"
                android:layout_width="129dp"
                android:layout_height="30dp"
                android:drawableLeft="@drawable/icon_time"
                android:text="05-03 周三"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:textColor="#2E2E2E"
                android:background="#F0F0F0"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/order_date_arrow"/>
            <TextView
                android:id="@+id/countTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36件"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4.5dp"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥240.00"
                android:textColor="#FF3B30"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="6dp"
                android:textSize="16sp"/>

        </RelativeLayout>
        <Button
            android:layout_width="124dp"
            android:layout_height="match_parent"
            android:background="#9ACC35"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:text="一键下单"/>
    </LinearLayout>
</RelativeLayout>