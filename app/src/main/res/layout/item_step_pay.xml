<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/orderStatus"
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/order_point" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/payTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="efwf"
                        android:gravity="center"
                        android:textColor="#3b3b3b"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/realTv"
                        android:layout_width="24dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/receive_circle"
                        android:gravity="center"
                        android:text="实收"
                        android:textColor="#FA5900"
                        android:textSize="9sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/returnTv"
                        android:layout_width="18dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/receive_circle"
                        android:gravity="center"
                        android:text="退"
                        android:textColor="#FA5900"
                        android:textSize="9sp"
                        android:visibility="invisible" />
                </LinearLayout>

                <TextView
                    android:id="@+id/payStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:drawablePadding="4dp"
                    android:drawableRight="@drawable/more_itemlist_grayarrow"
                    android:text="efw"
                    android:textColor="#4b4b4b"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/payDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="fewfew"
                android:textColor="#9b9b9b"
                android:textSize="15sp"

                />

            <TextView
                android:id="@+id/patSum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/icon_item"
                android:drawablePadding="6dp"
                android:maxLines="1"
                android:text="fewfew"
                android:textColor="#3b3b3b"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/payMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="#ffff"
                android:drawableLeft="@drawable/icon_price"
                android:drawablePadding="6dp"
                android:text="wefew"
                android:textColor="#3b3b3b"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:id="@+id/tv_one_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/order_pay_bg"
                    android:paddingBottom="5dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingTop="5dp"
                    android:text="再来一单"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/payBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/order_pay_bg"
                    android:paddingBottom="5dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingTop="5dp"
                    android:text="wefew"
                    android:textColor="#333333"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:background="#e9e9e9" />
</LinearLayout>