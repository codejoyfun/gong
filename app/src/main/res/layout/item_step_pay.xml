<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:paddingTop="10dp"
    >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:padding="12dp"
       android:background="#ffff"
       >
       <TextView
           android:id="@+id/payTitle"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:textColor="#333333"
           android:textSize="14sp"
           android:text="efwf"
           />
       <TextView
           android:id="@+id/payStatus"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="14sp"
           android:textColor="#ff4a00"
           android:text="efw"
           />
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#fbfafa"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/payPic"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            fresco:placeholderImage="@color/bg_gray"
            fresco:placeholderImageScaleType="fitXY"
            fresco:failureImage="@color/bg_gray"
            fresco:failureImageScaleType="fitXY"
            fresco:viewAspectRatio="1"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:id="@+id/payName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#333333"
                android:text="fewfew"
                android:maxLines="1"
                />
            <TextView
                android:id="@+id/patTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#ff4a00"
                android:text="fewfew"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                />

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/payMoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="#ffff"
        android:textSize="14sp"
        android:textColor="#333333"
        android:text="wefew"
        android:gravity="right"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e9e9e9"
        />
</LinearLayout>