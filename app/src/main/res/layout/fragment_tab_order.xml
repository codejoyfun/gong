<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground">
    <View
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/btn_green_gradian"/>
    <RelativeLayout
        android:id="@+id/rl_tab_order_always"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_item_order_tab"
        >
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="121dp"
            android:layout_height="92dp"
            android:src="@drawable/restaurant_order_icon_list"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="6dp"
            android:layout_height="11dp"
            android:src="@drawable/callin_out_icon_more"
            android:layout_marginTop="44dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常购清单"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="36dp"
            android:layout_toLeftOf="@+id/iv2"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:text="常买清单都在这，快速一键下单"
            android:textSize="12sp"
            android:layout_alignRight="@+id/text1"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tab_order_self_help"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_below="@+id/rl_tab_order_always"
        android:background="@drawable/bg_item_order_tab"
        >
        <ImageView
            android:id="@+id/iv3"
            android:layout_width="121dp"
            android:layout_height="92dp"
            android:src="@drawable/restaurant_order_icon_selfhelp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:id="@+id/iv4"
            android:layout_width="6dp"
            android:layout_height="11dp"
            android:src="@drawable/callin_out_icon_more"
            android:layout_marginTop="44dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自助下单"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="36dp"
            android:layout_toLeftOf="@+id/iv4"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:text="喜欢自己来？试试自助下单"
            android:textSize="12sp"
            android:layout_alignRight="@+id/text2"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tab_order_intelligent"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/bg_item_order_tab"
        android:layout_below="@+id/rl_tab_order_self_help"
        >
        <ImageView
            android:id="@+id/iv5"
            android:layout_width="121dp"
            android:layout_height="92dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/restaurant_order_icon_smart"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:id="@+id/iv6"
            android:layout_width="6dp"
            android:layout_height="11dp"
            android:src="@drawable/callin_out_icon_more"
            android:layout_marginTop="44dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="智能下单"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="36dp"
            android:layout_toLeftOf="@+id/iv6"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text3"
            android:text="智能分析，精准预测下单"
            android:textSize="12sp"
            android:layout_alignRight="@+id/text3"/>
    </RelativeLayout>
</RelativeLayout>