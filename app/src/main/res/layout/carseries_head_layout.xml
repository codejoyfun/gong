<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="400dp">

    </com.bigkoo.convenientbanner.ConvenientBanner>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_black_shape"
        android:layout_alignBottom="@id/banner"
        android:layout_alignRight="@id/banner"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:alpha="0.6"
        >
        <TextView
            android:id="@+id/textview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="5/20"
            android:textSize="17sp"
            android:gravity="center"
            android:textColor="#ffffff"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dealerContainer"
        android:layout_below="@id/banner">
        <include
            layout="@layout/car_price_item"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f5f5f5"
        android:id="@+id/line"
        android:layout_below="@id/dealerContainer"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/line">
        <View
            android:id="@+id/pline"
            android:layout_width="4dp"
            android:layout_height="15dp"
            android:background="#4b98f4"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相关款式"
            android:textSize="15sp"
            android:textColor="#333333"
            android:layout_toRightOf="@+id/pline"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5"
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</RelativeLayout>