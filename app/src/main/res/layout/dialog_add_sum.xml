<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_dialog_add_sum_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/windowBackground"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:background="#ffff"
        >
        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黑鱼(大型)"
            android:textColor="#444444"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/colseIcon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingBottom="8dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:src="@drawable/dialog_btn_closed"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="center"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/repertory_shadow"
        android:layout_gravity="bottom"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/windowBackground">

        <TextView
            android:id="@+id/tv_product_amount1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/v_line2"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="18dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="商品数量"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:background="@color/white"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/et_product_amount1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/v_line2"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="18dp"
            android:background="@color/white"
            android:paddingRight="15dp"
            android:layout_toRightOf="@id/tv_product_amount1"
            android:gravity="center_vertical|right"
            android:maxLines="2"
            android:inputType="numberDecimal"
            android:maxLength="9"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:hint="请填写数量"
            />

    </RelativeLayout>
    <TextView
        android:id="@+id/finalButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/finish_btn_selector"
        android:textSize="16sp"
        android:textColor="#ffff"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="完成"
        android:gravity="center"
        />
</LinearLayout>