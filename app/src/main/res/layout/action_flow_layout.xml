<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:paddingTop="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffff"
        android:paddingTop="8dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/flowText1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#5a5e60"
                    android:textSize="14sp"
                    android:text="点赞"
                    android:gravity="center_horizontal"
                    android:paddingTop="6dp"
                    android:paddingBottom="4dp"
                    />
                <TextView
                    android:id="@+id/flowText2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#878d8f"
                    android:textSize="14sp"
                    android:text="收藏"
                    android:gravity="center_horizontal"
                    android:paddingTop="6dp"
                    android:paddingBottom="4dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <View
                    android:id="@+id/flowImage1"
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:background="@drawable/anim_shpe"
                    android:layout_weight="1"
                    />
                <View
                    android:id="@+id/flowImage2"
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:background="@drawable/anim_shpe"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    />
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/flowText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#b3b3b3"
                android:textSize="14sp"
                android:text="收藏"
                android:gravity="center_horizontal"
                android:paddingTop="6dp"
                android:paddingBottom="4dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:visibility="invisible"
                />
        </FrameLayout>
    </LinearLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="1px"
       android:background="#dcdcdc"
       />
</LinearLayout>