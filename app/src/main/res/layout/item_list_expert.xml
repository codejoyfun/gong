<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_btn_selector"
    android:orientation="vertical"
    android:padding="6dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <com.facebook.drawee.view.SimpleDraweeView
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/comHead"
                android:layout_width="52dp"
                android:layout_height="52dp"
                fresco:failureImage="@drawable/default_avatar"
                fresco:failureImageScaleType="centerCrop"
                fresco:overlayImage="@drawable/head_over_bg"
                fresco:placeholderImage="@drawable/default_avatar"
                fresco:placeholderImageScaleType="centerCrop"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                fresco:roundAsCircle="false" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="top"
                >
                <TextView
                    android:id="@+id/comName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="name"
                    android:textSize="14sp"
                    android:textColor="#212121"
                    />
                <TextView
                    android:id="@+id/comPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="朝阳区"
                    android:textSize="14sp"
                    android:textColor="#595959"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="擅长领域"
                    android:textSize="14sp"
                    android:textColor="#595959"
                    />
                <TextView
                    android:id="@+id/comAddrass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="朝阳区"
                    android:textSize="14sp"
                    android:textColor="#b3b3b3"
                    android:background="@drawable/boder_bg"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_marginLeft="6dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>