<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include
            android:id="@+id/personalInfo_tittle"
            layout="@layout/common_title_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            >
            <RelativeLayout
                android:id="@+id/userInfoHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/white_btn_selector"
                android:paddingLeft="10dp"
                >

                <com.facebook.drawee.view.SimpleDraweeView
                    xmlns:fresco="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/userHead"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:layout_centerVertical="true"
                    fresco:placeholderImage="@drawable/default_avatar"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:failureImage="@drawable/default_avatar"
                    fresco:failureImageScaleType="centerCrop"
                    fresco:roundAsCircle="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="修改头像"
                    android:textColor="#888888"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@+id/img_h1"
                    android:layout_marginRight="12dp"
                    />

                <ImageView
                    android:id="@id/img_h1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/more_img" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#e8eae7"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <RelativeLayout
                android:id="@+id/userInfoNameLayout"
                android:layout_width="match_parent"
                android:layout_height="43dip"
                android:gravity="center_vertical"
                android:background="@drawable/white_btn_selector"
                >

                <TextView
                    android:id="@+id/tv_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="姓名"
                    android:textColor="#212121"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/userInfoName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_nick"
                    android:singleLine="true"
                    android:gravity="right"
                    android:padding="8dp"
                    android:text=""
                    android:textColor="#8b8b8b"
                    android:textSize="14sp" />


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#e8eae7"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <RelativeLayout
                android:id="@+id/userIdLayout"
                android:layout_width="match_parent"
                android:layout_height="43dip"
                android:gravity="center_vertical"
                android:background="@drawable/white_btn_selector"
                >

                <TextView
                    android:id="@+id/tv_account_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#212121"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:text="账号"
                    />

                <TextView
                    android:id="@+id/userInfoId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_account_text"
                    android:singleLine="true"
                    android:gravity="right"
                    android:padding="8dp"
                    android:text=""
                    android:textColor="#8b8b8b"
                    android:textSize="14sp" />


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#e8eae7"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <RelativeLayout
                android:id="@+id/userInfoPlaceLayout"
                android:layout_width="match_parent"
                android:layout_height="43dip"
                android:gravity="center_vertical"
                android:background="@drawable/white_btn_selector"
                >

                <TextView
                    android:id="@+id/tv_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="地区"
                    android:textColor="#212121"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/userInfoPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_place"
                    android:singleLine="true"
                    android:gravity="right"
                    android:padding="8dp"
                    android:text=""
                    android:textColor="#8b8b8b"
                    android:textSize="14sp" />


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#e8eae7"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <RelativeLayout
                android:id="@+id/userInfoStoreLayout"
                android:layout_width="match_parent"
                android:layout_height="43dip"
                android:gravity="center_vertical"
                android:background="@drawable/white_btn_selector"
                >

                <TextView
                    android:id="@+id/tv_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="门店"
                    android:textColor="#212121"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/userInfoStore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_store"
                    android:singleLine="true"
                    android:gravity="right"
                    android:padding="8dp"
                    android:text=""
                    android:textColor="#8b8b8b"
                    android:textSize="14sp" />


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#e8eae7"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <RelativeLayout
                android:id="@+id/userInfoPhoneLayout"
                android:layout_width="match_parent"
                android:layout_height="43dip"
                android:background="@drawable/white_btn_selector"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/tv_number_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#212121"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:text="手机"
                    />

                <ImageView
                    android:id="@+id/img_p3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:scaleType="matrix"
                    android:src="@drawable/more_img"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/userInfoPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/img_p3"
                    android:layout_toRightOf="@id/tv_number_text"
                    android:singleLine="true"
                    android:gravity="right"
                    android:padding="8dp"
                    android:text=""
                    android:textColor="#8b8b8b"
                    android:textSize="14sp" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#e8eae7"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#e8eae7"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <RelativeLayout
                android:id="@+id/userInfoChangePhoneLayout"
                android:layout_width="match_parent"
                android:layout_height="43dip"
                android:background="@drawable/white_btn_selector"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/tv_phone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#212121"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:text="修改登陆密码"
                    />

                <ImageView
                    android:id="@+id/img_p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:scaleType="matrix"
                    android:src="@drawable/more_img"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/userInfoSex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:gravity="right"
                    android:padding="8dp"
                    android:text=""
                    android:textColor="#8b8b8b"
                    android:textSize="14sp"
                    android:layout_alignBaseline="@+id/tv_phone_text"
                    android:layout_alignBottom="@+id/tv_phone_text"
                    android:layout_toRightOf="@+id/tv_phone_text"
                    android:layout_toEndOf="@+id/tv_phone_text" />

            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/exit_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/white_btn_selector"
            android:text="退出登录"
            android:textColor="#fd5b67"
            android:textSize="16sp"
            android:visibility="visible"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            />
    </LinearLayout>
</ScrollView>