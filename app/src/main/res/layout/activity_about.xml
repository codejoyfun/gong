<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.runwise.supply.mine.AboutActivity"
    android:background="@color/base_background_color"
    >
    <include
        layout="@layout/common_title_bar"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#212121"
        android:textSize="16sp"
        android:text="应用名称"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/appCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/base_color"
        android:textSize="14sp"
        android:text="v1.0"
        android:layout_marginTop="6dp"
        />


    <RelativeLayout
        android:id="@+id/versionLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/white_btn_selector"
        android:layout_marginTop="32dp"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e8eae7"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="版本更新"
            android:textColor="#3e3e3e"
            android:textSize="@dimen/bottom_tab_font_size"/>

        <ImageView
            android:id="@+id/rightRowIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/more_img"/>

        <TextView
            android:id="@+id/versionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/rightRowIcon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:text="已是最新版本"
            android:textColor="#b3b3b3"
            android:layout_marginRight="2dp"
            android:textSize="14sp"
            android:visibility="invisible"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e8eae7"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/helpLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/white_btn_selector"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="帮助"
            android:textColor="#3e3e3e"
            android:textSize="@dimen/bottom_tab_font_size"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/more_img"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e8eae7"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</LinearLayout>
