<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/base_background_color"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/more_bg"
            android:paddingBottom="22dp"
            android:paddingTop="@dimen/status_bar_padding_top"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:paddingTop="22dp"

                >

                <com.facebook.drawee.view.SimpleDraweeView
                    xmlns:fresco="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/mineHead"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    fresco:failureImage="@drawable/ca_profilephoto"
                    fresco:failureImageScaleType="centerCrop"
                    fresco:overlayImage="@drawable/head_over_bg"
                    fresco:placeholderImage="@drawable/ca_profilephoto"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:roundAsCircle="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/minePhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:textColor="#ffff"
                    android:textSize="@dimen/bottom_tab_font_size"
                    android:layout_marginTop="6dp"
                    android:text=""
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/settingIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/nav_setting_w"
                    android:layout_marginLeft="6dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cellIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="right"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/nav_service_message_w"
                    android:layout_marginRight="6dp"
                    />
            </LinearLayout>

        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffff"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#434343"
                android:textSize="14sp"
                android:text="发布的评价"
                android:gravity="center_horizontal"
                />
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#efeeea"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#434343"
                        android:text="配送服务"
                        />
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:id="@+id/ratingbarPeisong"
                        style="@style/RatingBarStyle"
                        android:stepSize="0.1"
                        android:isIndicator="true"
                        android:rating="3.5"
                        android:layout_marginLeft="6dp"
                        />
                    <TextView
                        android:id="@+id/peisongStr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#434343"
                        android:text="2.3"
                        android:layout_marginLeft="6dp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/tag_down"
                        android:layout_marginLeft="4dp"
                        android:id="@+id/peisongImg"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#434343"
                        android:text="货品质量"
                        />
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:id="@+id/ratingbarZhiliang"
                        style="@style/RatingBarStyle"
                        android:stepSize="0.1"
                        android:isIndicator="true"
                        android:rating="3.5"
                        android:layout_marginLeft="6dp"
                        />
                    <TextView
                        android:id="@+id/zhiliangStr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#434343"
                        android:text="2.3"
                        android:layout_marginLeft="6dp"
                        />
                    <ImageView
                        android:id="@+id/zhiliangImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/tag_up"
                        android:layout_marginLeft="4dp"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_btn_selector"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                >

                <LinearLayout
                    android:id="@+id/itemLayout_1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/more_restaurant_thisweek"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#432f30"
                        android:text="本周订单"
                        android:layout_marginTop="6dp"
                        android:id="@+id/textView" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/itemLayout_2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/more_restaurant_lastweek"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#432f30"
                        android:text="上周订单"
                        android:layout_marginTop="6dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/itemLayout_3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/more_restaurant_returnrecord"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#432f30"
                        android:text="退货记录"
                        android:layout_marginTop="6dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/itemLayout_4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/more_restautant_orderall"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#432f30"
                        android:text="全部订单"
                        android:layout_marginTop="6dp"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_stocktaking_record"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/white_btn_selector"
            android:layout_marginTop="12dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="盘点记录"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/more_restaurant_stockdoc_s"
                android:textColor="#3e3e3e"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/right_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/more_img"/>
            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_toLeftOf="@id/right_row"
                android:layout_marginRight="6dp"
                android:background="@drawable/red_shap"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e8eae7"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_price_list"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/white_btn_selector"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="价格目"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/more_restaurant_pricelist_s"
                android:textColor="#3e3e3e"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/right_row1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/more_img"/>
            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_toLeftOf="@id/right_row1"
                android:layout_marginRight="6dp"
                android:background="@drawable/red_shap"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e8eae7"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_bill"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/white_btn_selector"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="对账单"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/more_restaurant_checkinglist_s"
                android:textColor="#3e3e3e"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/rightRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/more_img"/>
            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_toLeftOf="@id/rightRow"
                android:layout_marginRight="6dp"
                android:background="@drawable/red_shap"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e8eae7"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_procurement"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/white_btn_selector"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="自采商品"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/more_restaurant_selfserved_s"
                android:textColor="#3e3e3e"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/right_row2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/more_img"/>
            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_toLeftOf="@id/right_row2"
                android:layout_marginRight="6dp"
                android:background="@drawable/red_shap"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e8eae7"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="#ffff"
            android:padding="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/more_kpi_icon"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal|top"
                        >
                        <TextView
                            android:id="@+id/moneySum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#36cf00"
                            android:textSize="25sp"
                            android:text="123"
                            />
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#36cf00"
                                android:textSize="11sp"
                                android:text="万"
                                android:layout_marginLeft="2dp"
                                android:layout_gravity="top"
                                android:layout_marginTop="2dp"
                                />
                        </FrameLayout>

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6b6b6b"
                        android:textSize="12sp"
                        android:text="上周采购额"
                        android:layout_marginTop="6dp"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>