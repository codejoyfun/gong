<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingLeft="@dimen/padding_left">
    <com.facebook.drawee.view.SimpleDraweeView
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/productImage"
        android:layout_width="54dp"
        android:layout_height="54dp"
        fresco:placeholderImageScaleType="focusCrop"
        fresco:placeholderImage="@drawable/placeholder"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <LinearLayout
        android:id="@+id/countLL"
        android:layout_marginRight="@dimen/padding_right"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible">
        <EditText
            android:id="@+id/receivedTv"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:textColor="#343434"
            android:inputType="number"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:maxLength="9"
            android:text="0"
            />
        <TextView
            android:id="@+id/countTv"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginLeft="8dp"
            android:textColor="#343434"
            android:text="/12条"
            />
        <ImageButton
            android:id="@+id/input_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/btn_add"
            android:background="@null"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/settleLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/nameTv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/settleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="11sp"
            android:textColor="#343434"
            android:text="10／12条"/>
        <TextView
            android:id="@+id/weightTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="6dp"
            android:layout_gravity="right"
            android:textSize="12sp"
            android:textColor="#2E2E2E"
            android:text="25斤"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:id="@+id/doBtn"
            android:textColor="#333333"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:background="@drawable/firstpage_do_circle"
            android:text="收货"/>
    </LinearLayout>
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#444444"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/countLL"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@id/productImage"
        android:layout_toRightOf="@id/productImage"/>
    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#999999"
        android:maxLines="2"
        android:textSize="11sp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/countLL"
        android:layout_alignLeft="@id/name"
        android:layout_marginTop="5dp"
        android:layout_below="@id/name"
        />
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E5E5E5"
        android:layout_below="@id/productImage"
        android:layout_marginTop="42dp"
        />
</RelativeLayout>