<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    >
    <include
        android:id="@+id/titleLayout"
        layout="@layout/common_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffff"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:paddingLeft="8dp"
        android:layout_marginTop="10dp"
        >
        <EditText
            android:id="@+id/contextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dip"
            android:gravity="left|top"
            android:hint="请填写一个标题吧"
            android:maxLines="1"
            android:textColor="#2b2b2b"
            android:textColorHint="#b7b7b7"
            android:textSize="16sp"
            android:background="@color/white"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e9e9e9"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            />
        <EditText
            android:id="@+id/classcircle_send_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dip"
            android:gravity="left|top"
            android:hint="请描绘您遇到的问题,我们会仔细聆听"
            android:lines="6"
            android:maxLines="6"
            android:textColor="#2b2b2b"
            android:textColorHint="#b7b7b7"
            android:textSize="15sp"
            android:background="@color/white"/>

        <com.runwise.supply.view.MyGridView
            android:id="@+id/classcircle_send_gridview"
            android:layout_marginTop="6dip"
            android:layout_marginBottom="6dip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="6dp"
            android:numColumns="4"
            android:verticalSpacing="6dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/contextContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="left|top"
        android:hint="请留下您的邮箱或电话"
        android:singleLine="true"
        android:textColor="#2b2b2b"
        android:textColorHint="#b7b7b7"
        android:textSize="16sp"
        android:background="@color/white"
        android:layout_marginTop="12dp"
        />
</LinearLayout>