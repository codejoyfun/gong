<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="#FFFFFF">
    <include  layout="@layout/common_title_bar"
        android:id="@+id/titleBar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_below="@+id/titleBar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="扫码枪未连接"
            android:textColor="#f11835"
            android:gravity="center_vertical|right"
            android:paddingRight="15dp"
            android:textSize="12sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_height="20dp">
            <ProgressBar
                android:id="@+id/pbBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/pb_progress_stlye"
                android:indeterminateDrawable="@drawable/receive_tip_circle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="20"
                android:progress="5"
                />
            <TextView
                android:id="@+id/pbValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已收0/25件商品"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textSize="12sp"/>
        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/search_bar"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                <ImageView
                    android:id="@+id/iv_open"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/arrow"
                    android:padding="15dp"
                    android:background="@color/white"
                    android:layout_alignParentRight="true"/>

                <com.ogaclejapan.smarttablayout.SmartTabLayout
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#FFFFFF"
                    android:layout_toLeftOf="@id/iv_open"
                    app:stl_customTabTextLayoutId="@layout/custom_tab"
                    app:stl_defaultTabTextColor="@color/base_color"
                    app:stl_defaultTabTextSize="16dp"
                    app:stl_distributeEvenly="true"
                    app:stl_dividerColor="@color/transparent"
                    app:stl_indicatorColor="@color/base_color"
                    app:stl_indicatorCornerRadius="2dp"
                    app:stl_indicatorInterpolation="smart"
                    app:stl_indicatorThickness="4dp"
                    app:stl_overlineColor="@color/transparent"
                    app:stl_underlineThickness="0dp" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E5E5E5"
                    />
                <com.runwise.supply.view.NoScrollViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:background="#F5F5F5"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>