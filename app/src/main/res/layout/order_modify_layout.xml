<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/common_title_bar"
        android:id="@+id/title_bar"></include>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pullListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="#0000"
        ptr:ptrAnimationStyle="flip"
        android:background="#FFFFFF"
        android:divider="@null"
        android:paddingBottom="55dp"
        android:layout_below="@+id/title_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <LinearLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@drawable/onekey_circle"
        android:layout_marginBottom="-55dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="10dp"
            >
            <TextView
                android:id="@+id/dateTv"
                android:layout_width="129dp"
                android:layout_height="30dp"
                android:drawableLeft="@drawable/icon_time"
                android:text="05-03 周三"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:textColor="#2E2E2E"
                android:background="#F0F0F0"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/order_date_arrow"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/dateTv"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/countTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=" "
                    android:gravity="center"
                    android:layout_marginTop="4.5dp"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/moenyTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:text=" "
                    android:gravity="center"
                    android:textColor="#FF3B30"
                    android:layout_marginBottom="6dp"
                    android:textSize="16sp"/>
            </LinearLayout>


        </RelativeLayout>
        <Button
            android:id="@+id/onekeyBtn"
            android:layout_width="124dp"
            android:layout_height="match_parent"
            android:background="#9ACC35"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:text="提交修改"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/select_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="#FFFFFF"
        android:paddingLeft="15dp"
        android:layout_marginBottom="-55dp"
        android:paddingRight="15dp">
        <LinearLayout
            android:id="@+id/allLL"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/allCb"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:button="@drawable/product_selector"
                android:clickable="false"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="全选"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:textColor="#2E2E2E"
                android:gravity="center_vertical"
                android:layout_marginLeft="13dp"
                />
        </LinearLayout>

        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="71dp"
            android:layout_height="31dp"
            android:background="@drawable/product_delete_circle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#E3E3E3"
            android:text="删除"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/self_help_rl"
        android:visibility="gone"
        android:layout_below="@id/title_bar">
        <TextView
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="您还没有相关商品哦"
            android:layout_centerInParent="true"
            android:textColor="#666666"/>
        <TextView
            android:id="@+id/tip2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="点击按钮添加商品"
            android:layout_below="@id/tip"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="#B6B6B6"/>
        <Button
            android:id="@+id/self_add_btn"
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:text="添加商品"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_below="@id/tip2"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/product_add_circle"
            />
        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/default_ico_noneorder"
            android:scaleType="centerInside"
            android:layout_above="@id/tip"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"/>

    </RelativeLayout>
</RelativeLayout>