<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="84dp"
    android:paddingBottom="15dp" android:paddingTop="15dp"
    android:paddingRight="@dimen/padding_right">
    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_centerVertical="true"
        android:button="@drawable/product_selector"
        android:layout_marginLeft="15dp"
        android:visibility="gone"
        android:layout_alignParentLeft="true"/>
    <com.facebook.drawee.view.SimpleDraweeView
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/productImage"
        android:layout_width="55dp"
        android:layout_height="55dp"
        fresco:placeholderImageScaleType="focusCrop"
        android:layout_marginLeft="15dp"
        android:layout_alignWithParentIfMissing="true"
        fresco:placeholderImage="@drawable/placeholder"
        android:layout_toRightOf="@id/checkbox"
        />
    <ImageButton
        android:id="@+id/addBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/btn_add"
        android:background="@null"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        />
    <LinearLayout
        android:id="@+id/editLL"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/input_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/input_minus"
            android:background="@null"/>
        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:maxLength="4"
            android:gravity="center"
            android:inputType="numberDecimal"/>
        <ImageButton
            android:id="@+id/input_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/input_add"
            android:background="@null"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#444444"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_toRightOf="@+id/productImage"
        android:layout_toLeftOf="@+id/editLL" />
    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#999999"
        android:maxLines="2"
        android:textSize="11sp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/editLL"
        android:layout_alignLeft="@id/name"
        android:layout_marginTop="5dp"
        android:layout_below="@id/name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="x14"
        android:textColor="#444444"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:id="@+id/countTv"
        android:layout_marginRight="15dp"
        android:visibility="invisible"
        />

</RelativeLayout>