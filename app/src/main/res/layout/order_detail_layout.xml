<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/common_title_bar"
        android:id="@+id/title_bar"/>
    <RelativeLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:paddingRight="15dp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/rightBtn"
            android:layout_width="86dp"
            android:layout_height="31dp"
            android:text="评价"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_alignParentRight="true"
            android:background="@drawable/firstpage_do_circle"/>
        <Button
            android:id="@+id/rightBtn2"
            android:layout_width="86dp"
            android:layout_height="31dp"
            android:text="售后订单"
            android:textSize="14sp"
            android:textColor="#333333"
            android:visibility="invisible"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/rightBtn"
            android:background="@drawable/firstpage_do_circle"/>
    </RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar"
        android:layout_above="@id/bottom_bar"
        android:background="#F0F0F0"
        android:layout_alignWithParentIfMissing="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F0F0F0"
            android:orientation="vertical">
            <!--订单状态-->
            <include layout="@layout/orderdetain_state_item" />
            <!--订单信息-->
            <include layout="@layout/orderdetail_info_item" />
            <!--种类bar-->
            <include layout="@layout/orderdetail_type_item" />
            <!--列表-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                >

            </android.support.v7.widget.RecyclerView>
            <!--汇总信息-->
            <include layout="@layout/orderdetail_bottom_item" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>