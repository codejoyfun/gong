<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/cv_inventory_root"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        card_view:cardElevation="1px"
        card_view:cardCornerRadius="5dp"
        android:background="@color/white"
        >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:paddingRight="15dp"
                >

                <ImageView
                    android:id="@+id/iv_transfer_status"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="7dp"
                    android:src="@drawable/state_delivery_8_callout"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_item_inventory_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="盘点日期12-9"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#2E2E2E" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_item_transfer_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:drawablePadding="4dp"
                            android:text="盘点中"
                            android:textColor="#4b4b4b"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_item_inventory_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PD2017120600002"
                        android:textSize="12sp"
                        android:textColor="#999999"

                        />

                    <TextView
                        android:id="@+id/tv_item_inventory_person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/icon_name"
                        android:drawablePadding="6dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="#3b3b3b"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:id="@+id/tv_item_transfer_cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/order_pay_bg"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:text="取消"
                            android:layout_gravity="right"
                            android:paddingLeft="18dp"
                            android:paddingRight="18dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:visibility="gone"
                            />

                        <TextView
                            android:id="@+id/tv_item_inventory_cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/order_pay_bg"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:text="取消盘点"
                            android:layout_gravity="right"
                            android:paddingLeft="18dp"
                            android:paddingRight="18dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_marginLeft="10dp"
                            />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
