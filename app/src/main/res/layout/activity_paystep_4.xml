<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical" >
    <include
        android:id="@+id/title_layout"
        layout="@layout/common_title_bar" />
    <FrameLayout
        android:layout_below="@id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp"
        >
        <TextView
            android:id="@+id/paystep4_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/paystep4_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/paystep4_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/paystep4_text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/paystep4_text5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/paystep4_text6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/paystep4_text7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/paystep4_text8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!--<TextView-->
            <!--android:id="@+id/paystep4_text9"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
         />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/title_layout"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:background="#ffff"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp"
                    android:paddingRight="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:text="身份证(正反面)"
                        />
                    <com.facebook.drawee.view.SimpleDraweeView
                        xmlns:fresco="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/paystep4_pic1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        fresco:placeholderImage="@drawable/fill_in_the_picture"
                        fresco:placeholderImageScaleType="fitXY"
                        fresco:failureImage="@drawable/fill_in_the_picture"
                        fresco:failureImageScaleType="fitXY"
                        />

                    <com.facebook.drawee.view.SimpleDraweeView
                        xmlns:fresco="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/paystep4_pic2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        fresco:placeholderImage="@drawable/fill_in_the_picture"
                        fresco:placeholderImageScaleType="fitXY"
                        fresco:failureImage="@drawable/fill_in_the_picture"
                        fresco:failureImageScaleType="fitXY"
                        android:layout_marginLeft="8dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/more_img"
                        android:layout_marginLeft="8dp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e9e9e9"/>

                <LinearLayout
                    android:id="@+id/merryLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp"
                    android:paddingRight="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:text="配偶身份证(正反面)"
                        />
                    <com.facebook.drawee.view.SimpleDraweeView
                        xmlns:fresco="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/paystep4_pic7"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        fresco:placeholderImage="@drawable/fill_in_the_picture"
                        fresco:placeholderImageScaleType="fitXY"
                        fresco:failureImage="@drawable/fill_in_the_picture"
                        fresco:failureImageScaleType="fitXY"
                        />

                    <com.facebook.drawee.view.SimpleDraweeView
                        xmlns:fresco="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/paystep4_pic8"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        fresco:placeholderImage="@drawable/fill_in_the_picture"
                        fresco:placeholderImageScaleType="fitXY"
                        fresco:failureImage="@drawable/fill_in_the_picture"
                        fresco:failureImageScaleType="fitXY"
                        android:layout_marginLeft="8dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/more_img"
                        android:layout_marginLeft="8dp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e9e9e9"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp"
                    android:paddingRight="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:text="近一个月增信报告"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/more_img"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    >
                    <com.runwise.supply.view.MyGridView
                        android:id="@+id/classcircle_send_gridview"
                        android:layout_marginTop="6dip"
                        android:layout_marginBottom="6dip"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:horizontalSpacing="6dp"
                        android:numColumns="6"
                        android:verticalSpacing="6dp"
                        />
                    <!--<View-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_weight="1"-->
                        <!--android:layout_height="1px"/>-->
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e9e9e9"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp"
                    android:paddingRight="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:text="本人手持身份证照"
                        />
                    <com.facebook.drawee.view.SimpleDraweeView
                        xmlns:fresco="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/paystep4_pic3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        fresco:placeholderImage="@drawable/fill_in_the_picture"
                        fresco:placeholderImageScaleType="fitXY"
                        fresco:failureImage="@drawable/fill_in_the_picture"
                        fresco:failureImageScaleType="fitXY"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/more_img"
                        android:layout_marginLeft="8dp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e9e9e9"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp"
                    android:paddingRight="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:text="还款借记卡(正面)"
                        />
                    <com.facebook.drawee.view.SimpleDraweeView
                        xmlns:fresco="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/paystep4_pic4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        fresco:placeholderImage="@drawable/fill_in_the_picture"
                        fresco:placeholderImageScaleType="fitXY"
                        fresco:failureImage="@drawable/fill_in_the_picture"
                        fresco:failureImageScaleType="fitXY"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/more_img"
                        android:layout_marginLeft="8dp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e9e9e9"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp"
                    android:paddingRight="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:text="场景照片"
                        />
                    <com.facebook.drawee.view.SimpleDraweeView
                        xmlns:fresco="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/paystep4_pic5"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        fresco:placeholderImage="@drawable/fill_in_the_picture"
                        fresco:placeholderImageScaleType="fitXY"
                        fresco:failureImage="@drawable/fill_in_the_picture"
                        fresco:failureImageScaleType="fitXY"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/more_img"
                        android:layout_marginLeft="8dp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e9e9e9"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp"
                    android:paddingRight="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:text="驾驶证照片"
                        />
                    <com.facebook.drawee.view.SimpleDraweeView
                        xmlns:fresco="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/paystep4_pic6"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        fresco:placeholderImage="@drawable/fill_in_the_picture"
                        fresco:placeholderImageScaleType="fitXY"
                        fresco:failureImage="@drawable/fill_in_the_picture"
                        fresco:failureImageScaleType="fitXY"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/more_img"
                        android:layout_marginLeft="8dp"
                        />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/proceSeeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#ffff"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:text="确认协议并签字"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/more_img"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/paystep4_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/getcode_selector"
                android:text="提交审核"
                android:textColor="#ffff"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/paystep4_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="我已阅读《贷款协议》并志愿提交贷款申请"
                android:textColor="#888888"
                android:button="@drawable/chekcbox_selector"
                android:layout_marginLeft="12dp"
                android:paddingLeft="4dp"
                android:checked="true"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>