<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:padding="10dp"
    >
    <TextView
        android:id="@+id/expertTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#212121"
        android:textSize="14sp"
        android:text="名字"
        />
    <com.runwise.supply.view.ExpandableTextView
        android:id="@+id/classCircleExpTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="14dp"
        android:layout_marginTop="8dp"
        >
        <TextView
            android:id="@+id/classCircleContext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:paddingBottom="6dp"
            android:lineSpacingExtra="2dp"
            android:textColor="#2b2b2b"
            android:textSize="14sp"
            android:visibility="visible"
            android:text="23423432432"
            />
        <TextView
            android:id="@+id/classCircleContextTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/base_color"
            android:text="全文"
            android:layout_gravity="right"
            />
    </com.runwise.supply.view.ExpandableTextView>
    <View
        android:id="@+id/expertLine"
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#dcdcdc"
        android:layout_marginTop="8dp"
        />
</LinearLayout>