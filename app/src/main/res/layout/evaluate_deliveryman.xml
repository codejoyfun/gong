<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="10dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/headSdv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        fresco:overlayImage="@drawable/head_over_bg"
        fresco:placeholderImage="@drawable/login_ico_user"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundAsCircle="true"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/headSdv"
        android:layout_alignBottom="@id/headSdv"
        android:layout_marginLeft="9.5dp"
        android:layout_toRightOf="@id/headSdv"
        android:text="配送员名称"
        android:gravity="center"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/second_title"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="9.5dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/headSdv"
        android:text=""
        android:textColor="@color/textColorSecondary"
        android:textSize="@dimen/second_title"/>

    <View
        android:id="@+id/v_line"
        style="@style/divider_horizontal"
        android:layout_below="@id/tv_time"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_deliveryman"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/v_line"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="配送评价"
        android:textColor="#2E2E2E"
        android:textSize="@dimen/second_title"/>

    <RatingBar
        android:id="@+id/rb_delivery_service"
        style="@style/RatingBarStyle2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/v_line"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/tv_deliveryman"
        android:numStars="5"
        android:stepSize="1"/>

    <com.runwise.supply.view.AutoLinefeedLayout
        android:id="@+id/alfl_tag_negative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rb_delivery_service"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="visible">

        <CheckBox
            android:id="@+id/cb1"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:background="@drawable/evaluate_star_selector"
            android:button="@null"
            android:gravity="center"
            android:text="配送超时"
            android:textColor="@color/selector_evaluate_text"
            android:textSize="12sp"/>

        <CheckBox
            android:id="@+id/cb2"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="9dp"
            android:background="@drawable/evaluate_star_selector"
            android:button="@null"
            android:gravity="center"
            android:text="服务状态差"
             android:textColor="@color/selector_evaluate_text"
            android:textSize="12sp"/>

        <CheckBox
            android:id="@+id/cb3"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="9dp"
            android:background="@drawable/evaluate_star_selector"
            android:button="@null"
            android:text="货物损坏"
            android:textColor="@color/selector_evaluate_text"
            android:textSize="12sp"/>

        <CheckBox
            android:id="@+id/cb4"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="9dp"
            android:background="@drawable/evaluate_star_selector"
            android:button="@null"
            android:text="送错货"
            android:textColor="@color/selector_evaluate_text"
            android:textSize="12sp"/>
    </com.runwise.supply.view.AutoLinefeedLayout>

    <com.runwise.supply.view.AutoLinefeedLayout
        android:id="@+id/alfl_tag_positive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alfl_tag_negative"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="visible">

        <CheckBox
            android:id="@+id/cb5"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:background="@drawable/evaluate_star_selector"
            android:button="@null"
            android:gravity="center"
            android:text="准时送达"
            android:textColor="@color/selector_evaluate_text"
            android:textSize="12sp"/>

        <CheckBox
            android:id="@+id/cb6"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="9dp"
            android:background="@drawable/evaluate_star_selector"
            android:button="@null"
            android:gravity="center"
            android:text="服务态度好"
            android:textColor="@color/selector_evaluate_text"
            android:textSize="12sp"/>

        <CheckBox
            android:id="@+id/cb7"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="9dp"
            android:background="@drawable/evaluate_star_selector"
            android:button="@null"
            android:text="货物保存完好"
            android:textColor="@color/selector_evaluate_text"
            android:textSize="12sp"/>

        <CheckBox
            android:id="@+id/cb8"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="9dp"
            android:background="@drawable/evaluate_star_selector"
            android:button="@null"
            android:text="速度"
            android:textColor="@color/selector_evaluate_text"
            android:textSize="12sp"/>

        <CheckBox
            android:id="@+id/cb9"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="9dp"
            android:background="@drawable/evaluate_star_selector"
            android:button="@null"
            android:text="主动联系"
            android:textColor="@color/selector_evaluate_text"
            android:textSize="12sp"/>
    </com.runwise.supply.view.AutoLinefeedLayout>

    <View
        android:id="@+id/v_line1"
        style="@style/divider_horizontal"
        android:layout_below="@id/alfl_tag_positive"
        android:visibility="visible"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/et_delivery"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_below="@id/v_line1"
        android:layout_marginRight="15dp"
        android:background="@null"
        android:gravity="top"
        android:hint="写下你对配送服务的评价吧~"
        android:padding="10dp"
        android:visibility="visible"
        android:textColor="@color/textColorThird"
        android:textSize="12sp"/>


</RelativeLayout>