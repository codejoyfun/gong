<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffff"
    android:paddingRight="6dp"
    android:paddingLeft="6dp"
    android:paddingTop="6dp"
    >
    <LinearLayout
        android:id="@+id/carSysRootLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <FrameLayout
            android:id="@+id/carSysLayout1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="#ffff"
            android:layout_marginRight="3dp"
            >
            <com.facebook.drawee.view.SimpleDraweeView
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                fresco:viewAspectRatio="1.8"
                fresco:placeholderImage="@drawable/context"
                fresco:placeholderImageScaleType="focusCrop"
                />
            <TextView
                android:id="@+id/carSysName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text=""
                android:layout_marginTop="26dp"
                android:layout_marginLeft="10dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/search_bg"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:gravity="center_vertical"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:visibility="invisible"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GO"
                    android:textColor="#ffff"
                    android:textSize="16sp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_go"
                    android:layout_marginLeft="6dp"
                    />
            </LinearLayout>
            <com.facebook.drawee.view.SimpleDraweeView
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/carSysIcon1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                fresco:viewAspectRatio="1.8"
                android:layout_gravity="bottom|right"
                fresco:placeholderImageScaleType="focusCrop"
                fresco:actualImageScaleType="fitCenter"
                />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/carSysLayout2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="#ffff"
            android:layout_marginLeft="3dp"
            >
            <com.facebook.drawee.view.SimpleDraweeView
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                fresco:viewAspectRatio="1.8"
                fresco:placeholderImage="@drawable/context"
                fresco:placeholderImageScaleType="focusCrop"
                />
            <TextView
                android:id="@+id/carSysName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text=""
                android:layout_marginTop="26dp"
                android:layout_marginLeft="10dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/search_bg"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:gravity="center_vertical"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:visibility="invisible"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GO"
                    android:textColor="#ffff"
                    android:textSize="16sp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_go"
                    android:layout_marginLeft="6dp"
                    />
            </LinearLayout>
            <com.facebook.drawee.view.SimpleDraweeView
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/carSysIcon2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                fresco:viewAspectRatio="1.8"
                android:layout_gravity="bottom|right"
                fresco:placeholderImageScaleType="focusCrop"
                fresco:actualImageScaleType="fitCenter"
                />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>