<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="84dp"
    android:paddingTop="15dp"
    android:paddingLeft="@dimen/padding_left"
    android:id="@+id/itemRootView"
    >
    <com.facebook.drawee.view.SimpleDraweeView
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/productImage"
        android:layout_width="55dp"
        android:layout_height="55dp"
        fresco:placeholderImageScaleType="focusCrop"
        fresco:placeholderImage="@drawable/placeholder"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/tv_transfer_in_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/12è¢‹"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/padding_right"
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:id="@+id/countLL"
        android:layout_toLeftOf="@id/tv_transfer_in_height"
        android:layout_marginRight="3dp"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible">
        <TextView
            android:id="@+id/tv_transfer_in_actual_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="8dp"
            android:textColor="#2E2E2E"
            android:text="12"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/weightTv"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:textSize="12sp"
        android:text="33333"
        android:textColor="#2E2E2E"
        android:visibility="invisible"
        android:layout_below="@+id/countLL"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ddddd"
        android:textColor="#444444"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/countLL"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@id/productImage"
        android:layout_toRightOf="@id/productImage"/>
    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="asdfasdf"
        android:textColor="#999999"
        android:maxLines="2"
        android:textSize="11sp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/countLL"
        android:layout_alignLeft="@id/name"
        android:layout_marginTop="5dp"
        android:layout_below="@id/name"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E5E5E5"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>