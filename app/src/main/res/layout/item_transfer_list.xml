<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffff"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/iv_transfer_status"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/state_delivery_8_callout"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/item_transfer_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#3b3b3b"
                        android:textSize="16sp"
                        android:text="ST175234523947"
                        />

                    <TextView
                        android:id="@+id/returnTv"
                        android:layout_width="18dp"
                        android:layout_height="14dp"
                        android:text="退"
                        android:layout_marginLeft="5dp"
                        android:textSize="9sp"
                        android:textColor="#FA5900"
                        android:visibility="invisible"
                        android:gravity="center"
                        android:background="@drawable/receive_circle"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_item_transfer_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#4b4b4b"
                    android:text="已提交"
                    android:layout_marginTop="2dp"
                    android:drawablePadding="4dp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_item_transfer_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#9b9b9b"
                android:text="2017-12-12"

                />
            <TextView
                android:id="@+id/tv_item_transfer_locations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#3b3b3b"
                android:text="fewfew"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawableLeft="@drawable/ic_order_allot_store"
                android:drawablePadding="6dp"
                />

            <TextView
                android:id="@+id/tv_item_transfer_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffff"
                android:textSize="14sp"
                android:textColor="#3b3b3b"
                android:text="wefew"
                android:layout_marginTop="2dp"
                android:drawableLeft="@drawable/icon_item"
                android:drawablePadding="6dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/tv_item_transfer_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/order_pay_bg"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:text="取消"
                    android:layout_gravity="right"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/tv_item_transfer_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/order_pay_bg"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:text="入库"
                    android:layout_gravity="right"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e9e9e9"
        android:layout_marginLeft="12dp"
        />
</LinearLayout>