<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">


    <ImageView
        android:id="@+id/icon"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_below="@id/title_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_register_succeed"
        />

    <TextView
        android:id="@+id/receiveTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="恭喜您,注册成功!"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/receiveTvSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/receiveTv"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="我们已经收到您的资料,将为您第一时间审核\n审核通过后会进行电话通知"
        android:textColor="@color/textColorThird"
        android:textSize="@dimen/second_title"
        />


    <TextView
        android:id="@+id/orderBtn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/receiveTvSecond"
        android:layout_marginTop="32dp"
        android:background="@drawable/getcode_selector"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="返回首页"
        android:textColor="@color/white"
        />


</RelativeLayout>